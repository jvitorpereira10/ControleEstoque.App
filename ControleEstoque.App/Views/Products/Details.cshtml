@model IEnumerable<ControleEstoque.App.Models.Product>
@{
    ViewData["Title"] = "Consultar";
}

<h2>@ViewData["Title"]</h2>

<h2>@ViewData["Title"]</h2>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="barCode">Código de Barras:</label>
                    <input type="text" class="form-control" name="barCode" value="@ViewData["barCode"]" />
                </div>
                <div class="form-group">
                    <label for="description">Descrição:</label>
                    <input type="text" class="form-control" name="description" value="@ViewData["description"]" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Produtos consultados</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BarCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PromotionalPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PromoStart)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PromoEnd)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BarCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ListPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PromotionalPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PromoStart)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PromoEnd)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar ao menu inicial</a>
</div>