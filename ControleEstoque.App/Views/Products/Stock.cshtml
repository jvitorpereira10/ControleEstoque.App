@model IEnumerable<ControleEstoque.App.Models.Product>
@{
    ViewData["Title"] = "Gerenciar Estoque";
}

<h3>@ViewData["Title"]</h3>
<hr />
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label>Ativo</label>
                    <select class="form-control" name="prodActive" value="@ViewData["prodActive"]">
                        <option value="2"></option>
                        <option value="0">NÃO</option>
                        <option value="1">SIM</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="barCode">Código de Barras</label>
                    <input type="text" class="form-control" name="barCode" value="@ViewData["barCode"]" autofocus />
                </div>
                <div class="form-group">
                    <label for="description">Descrição</label>
                    <input type="text" class="form-control" name="description" value="@ViewData["description"]" />
                </div>
            </div>
            <input type="hidden" value="ProdAtivo" id="ProdAtivo" />
            <button type="submit" class="btn btn-primary">Pesquisar</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Produtos consultados</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.BarCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BarCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                        <td>
                            <a asp-action="EditStock" asp-route-id="@item.Id" class="btn btn-default">Movimentar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar ao menu inicial</a>
</div>